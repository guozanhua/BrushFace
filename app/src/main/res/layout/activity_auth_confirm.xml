<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        layout="@layout/scanner_hint_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/auth_confirm_authCodeTitle"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="原预授权号"
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/black_333"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
        <com.wanding.face.view.ClearEditText
            android:id="@+id/auth_confirm_authCode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="原交易授权码！"
            android:text=""
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/black_333"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="40"
            android:layout_toRightOf="@id/auth_confirm_authCodeTitle"
            />
        <TextView
            android:id="@+id/auth_confirm_authTotalFeeTitle"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="消费金额"
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/black_333"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@id/auth_confirm_authCodeTitle"
            />
        <com.wanding.face.view.ClearEditText
            android:id="@+id/auth_confirm_authTotalFee"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="消费金额！"
            android:text=""
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/black_333"
            android:inputType="numberDecimal"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_below="@id/auth_confirm_authCode"
            android:layout_toRightOf="@id/auth_confirm_authTotalFeeTitle"
            />
        <!-- 20180413133134725640612990473024 -->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/auth_confirm_btOk"
            style="@style/button_styles"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            ></Button>
    </LinearLayout>

</LinearLayout>
