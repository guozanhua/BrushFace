<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/setting_device_content"
    >
    <include layout="@layout/menu_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/white_f8f8f8"
        >

        <View
            style="@style/divider_line1dp"
            />
        <RelativeLayout
            android:id="@+id/member_manage_cardVerificaLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/member_manage_cardVerificaImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/card_verifica_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/card_verifica"
                android:layout_toRightOf="@id/member_manage_cardVerificaImg"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:id="@+id/member_manage_memberTopUpLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/member_manage_memberTopUpImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/member_top_up_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/member_top_up"
                android:layout_toRightOf="@id/member_manage_memberTopUpImg"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
    </LinearLayout>
</LinearLayout>
