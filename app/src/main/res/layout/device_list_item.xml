<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >
    <TextView
        android:id="@+id/device_list_item_tvDeviceId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/device_list_id"
        android:textSize="@dimen/TextSize16"
        android:textColor="@color/grey_666666"
        />
    <TextView
        android:id="@+id/device_list_item_tvOnLineState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/device_list_online_state"
        android:textSize="@dimen/TextSize16"
        android:textColor="@color/grey_666666"
        />
    <TextView
        android:id="@+id/device_list_item_tvTerminalState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/device_list_terminal_state"
        android:textSize="@dimen/TextSize16"
        android:textColor="@color/grey_666666"
        />


</LinearLayout>
