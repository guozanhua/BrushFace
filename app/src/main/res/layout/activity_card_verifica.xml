<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        layout="@layout/menu_title_layout"
        android:visibility="gone"
        />
    <include
        layout="@layout/scanner_hint_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <com.wanding.face.view.ClearEditText
            android:id="@+id/card_veridica_etCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="核销劵码！"
            android:text=""
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/black_333"
            android:inputType="number"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="30"
            />
        <!-- 20180413133134725640612990473024 -->
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/card_veridica_btOk"
            style="@style/button_styles"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            ></Button>
    </LinearLayout>

</LinearLayout>
