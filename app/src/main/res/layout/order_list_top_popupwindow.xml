<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/gray_999"
     >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@color/white_ffffff"
         >
         <View 
             style="@style/divider_line1dp"
             />
         <TextView
            android:id="@+id/order_list_topPup_month"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:text="@string/order_list_top_pop_menu1"
	        android:textSize="@dimen/TextSize14"
	        android:textColor="@color/black_333"
	        android:gravity="center"
	        ></TextView>
		 <View
			 style="@style/divider_line1dp"
			 />
		 <TextView
			 android:id="@+id/order_list_topPup_yesterday"
			 android:layout_width="match_parent"
			 android:layout_height="60dp"
			 android:text="@string/order_list_top_pop_menu2"
			 android:textSize="@dimen/TextSize14"
			 android:textColor="@color/black_333"
			 android:gravity="center"
			 ></TextView>
         <View 
             style="@style/divider_line1dp"
             />
	    <TextView 
            android:id="@+id/order_list_topPup_day"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
			android:text="@string/order_list_top_pop_menu3"
	        android:textSize="@dimen/TextSize14"
	        android:textColor="@color/black_333"
	        android:gravity="center"
	        ></TextView>
	    <View 
             style="@style/divider_line1dp"
             />
     </LinearLayout>
</LinearLayout>
