<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    android:id="@+id/cloud_print_auth_layout"
    >
    <include layout="@layout/menu_title_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cloud_print_auth_hint"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/gray_9a9a9a"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cloud_auth_page"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="商户编号:"
            android:textSize="@dimen/TextSize16"
            android:textColor="@color/gray_999"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"

            />
        <com.wanding.face.view.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/black_323232"
            android:textSize="@dimen/TextSize18"
            android:hint="请输入商户编号"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="API密钥:"
            android:textSize="@dimen/TextSize16"
            android:textColor="@color/gray_999"
            android:gravity="center_vertical"
            />
        <com.wanding.face.view.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:hint="请输入API密钥"
            android:paddingLeft="15dp"
            android:textColor="@color/black_323232"
            android:textSize="@dimen/TextSize18"
            android:inputType="text"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            />
    </LinearLayout>



    <Button
        style="@style/button_styles"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:stateListAnimator="@null"
        />

</LinearLayout>
