<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_info_bg"
            />
        <include
            layout="@layout/transparent_title_bar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:id="@+id/menu_manage_tvMname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize20"
                android:textColor="@color/white_ffffff"
                />
            <TextView
                android:id="@+id/menu_manage_tvEname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/TextSize16"
                android:textColor="@color/white_ffffff"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/white_f8f8f8"
        >

        <View
            style="@style/divider_line1dp"
            />
        <RelativeLayout
            android:id="@+id/menu_manage_sign_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/setting_img0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sign_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/setting_sign"
                android:layout_toRightOf="@id/setting_img0"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            style="@style/divider_line1dp"
            />
        <RelativeLayout
            android:id="@+id/menu_manage_orderList_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/setting_img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/order_list_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/setting_order_list"
                android:layout_toRightOf="@id/setting_img1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:id="@+id/menu_manage_shift_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/menu_manage_img2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shift_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/setting_shift"
                android:layout_toRightOf="@id/menu_manage_img2"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:id="@+id/menu_manage_summary_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/menu_manage_img3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/summary_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/setting_summary"
                android:layout_toRightOf="@id/menu_manage_img3"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:id="@+id/menu_manage_authRecodeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/setting_img5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/auth_recode_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/auth_manage_authRecode"
                android:layout_toRightOf="@id/setting_img5"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            style="@style/divider_line1dp"
            android:visibility="visible"
            />
        <RelativeLayout
            android:id="@+id/menu_manage_member_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/menu_manage_img5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/member_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/setting_member"
                android:layout_toRightOf="@id/menu_manage_img5"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <View
            style="@style/divider_line1dp"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/menu_manage_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/menu_manage_setting_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/setting"
                android:layout_toRightOf="@id/menu_manage_setting_img"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
    </LinearLayout>
</LinearLayout>
