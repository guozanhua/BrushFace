<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_white_frame1dp_radius10"
    android:gravity="center"
    >
    <ImageView
        android:id="@+id/scan_qrcode_hint_dialog_imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:layout_alignParentRight="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/scan_qrcode_hint_dialog_imgClose"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp"
        >
        <TextView
            android:id="@+id/scan_qrcode_hint_dialog_tvScanHintTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫二维码退款"
            android:textSize="@dimen/TextSize18"
            android:textColor="@color/black_333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码成功将自动关闭"
            android:textSize="@dimen/TextSize18"
            android:textColor="@color/grey_666666"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>



</RelativeLayout>
