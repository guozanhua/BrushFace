<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white_ffffff</item>
        <item name="actionMenuTextColor">@color/white_ffffff</item>
        <item name="android:textSize">@dimen/TextSize16</item>
    </style>
    <!-- 统一标题栏字体样式 -->
    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSize20</item>
        <item name="android:textColor">@color/white_ffffff</item>
    </style>
    <!-- 统一Button样式 -->
    <style name="button_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">确 认</item>
        <item name="android:textSize">@dimen/TextSize22</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button_styles_0dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:text">确 认</item>
        <item name="android:textSize">@dimen/TextSize40</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:background">@drawable/button_style_0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 统一分割线 -->
    <style name="divider_line1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_e5e5e5</item>
    </style>
    <style name="divider_line1dp_h">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_e5e5e5</item>
    </style>
    <!-- 主界面金额按钮 -->
    <style name="content_layout_button_styles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_num_style</item>
        <item name="android:textSize">@dimen/TextSize40</item>
        <item name="android:textColor">@color/black_333</item>
    </style>
    <!-- PopupWindow点击控件底部弹出动画样式 -->
    <style name="AnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
    <!-- PopupWindow屏幕底部弹出动画样式 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- 系统Dialog样式 -->
    <style name="Translucent_Theme" parent="android:style/Theme.Holo.Light.Dialog.MinWidth">
        <!-- 显示时屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- 自定义Dialog样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 日期选择Dialog样式定义 -->
    <style name="TimePickerDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/color_bg</item>
    </style>

    <!-- 设置界面菜单字体样式 -->
    <style name="setting_menu_tvTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSize18</item>
        <item name="android:textColor">@color/grey_666666</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Switch开字体颜色（绿色）-->
    <style name="switch_true" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#33da33</item>
    </style>
    <!-- Switch关字体颜色（灰色）-->
    <style name="switch_false" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#9b9b9b</item>
    </style>

</resources>
