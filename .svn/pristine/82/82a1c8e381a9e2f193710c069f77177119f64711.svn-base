<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue_409EFF"
        >
        <ImageView
            android:id="@+id/scanner_hint_imgBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <ImageView
            android:id="@+id/scanner_hint_imgHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/san_qrcode_hind_icon1"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/scanner_hint_msgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫码付款"
        android:textSize="@dimen/TextSize40"
        android:textColor="@color/blue_4776C2"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/scanner_hint_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brush_san_pay"
        android:textSize="@dimen/TextSize40"
        android:textColor="@color/blue_4776C2"
        android:textStyle="bold"
        android:gravity="center"
        />

</LinearLayout>