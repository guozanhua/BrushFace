<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    android:gravity="center"
    >
    <include layout="@layout/scanner_hint_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brush_face_sum_money_title"
            android:textColor="@color/grey_666666"
            android:textSize="@dimen/TextSize40"
            />
        <TextView
            android:id="@+id/brush_face_tvSumMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥0.00"
            android:textColor="@color/black_333"
            android:textSize="@dimen/TextSize30"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/brush_face_pay_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="30dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <Button
                android:id="@+id/brush_face_btBrushFace"
                style="@style/button_styles"
                android:layout_height="80dp"
                android:textSize="44dp"
                android:text="@string/brush_face_brush_face_pay"
                android:stateListAnimator="@null"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/advice_icon"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
