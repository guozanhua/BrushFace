<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/setting_device_content"
    >
    <include layout="@layout/menu_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/white_f8f8f8"
        >
        <View
            style="@style/divider_line1dp"
            android:visibility="gone"
            />
        <RelativeLayout
            android:id="@+id/auth_maname_authCancelLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/setting_device_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/auth_cancel_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/auth_manage_authCancel"
                android:layout_toRightOf="@id/setting_device_img"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>

        <RelativeLayout
            android:id="@+id/auth_maname_authConfirmLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/setting_system_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/auth_confirm_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/auth_manage_authConfirm"
                android:layout_toRightOf="@id/setting_system_img"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
        <RelativeLayout
            android:id="@+id/auth_maname_authConfirmCancelLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/setting_img4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/auth_confirm_cancel_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/auth_manage_authConfirmCancel"
                android:layout_toRightOf="@id/setting_img4"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>

        <View
            style="@style/divider_line1dp"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/auth_maname_authRecodeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/white_ffffff"
            >
            <ImageView
                android:id="@+id/setting_img5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/auth_recode_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/setting_menu_tvTitleStyle"
                android:text="@string/auth_manage_authRecode"
                android:layout_toRightOf="@id/setting_img5"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View style="@style/divider_line1dp"/>
    </LinearLayout>
</LinearLayout>
