<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f5f5f5"
    >
    <include
        layout="@layout/menu_title_layout"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white_ffffff"
        >
        <TextView
            android:id="@+id/scan_qrcode_tvRefundCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="退款单号"
            android:textColor="@color/black_333"
            android:textSize="@dimen/TextSize18"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:background="@color/white_f2f2f2"
            />
        <ImageView
            android:id="@+id/scan_qrcode_imgScan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/scan_open_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/white_f2f2f2"
            />
        <com.wanding.face.view.ClearEditText
            android:id="@+id/scan_qrcode_etRefundCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="@dimen/TextSize18"
            android:textColor="@color/black_333"
            android:background="@color/white_f2f2f2"
            android:layout_toRightOf="@id/scan_qrcode_tvRefundCodeTitle"
            android:layout_toLeftOf="@id/scan_qrcode_imgScan"
            android:padding="10dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/scan_qrcode_btOk"
        style="@style/button_styles"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        ></Button>

</LinearLayout>
