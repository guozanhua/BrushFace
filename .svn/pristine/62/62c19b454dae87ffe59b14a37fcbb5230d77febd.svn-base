<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/white_f8f8f8"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/pay_state_imgPayState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wxin_log_160_icon"
            />
        <TextView
            android:id="@+id/pay_state_tvPayState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_state_success"
            android:textColor="@color/green_09bb07"
            android:textSize="@dimen/TextSize20"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/pay_state_tvPayTotalFeeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥"
                android:textColor="@color/green_09bb07"
                android:textSize="@dimen/TextSize40"
                />
            <TextView
                android:id="@+id/pay_state_tvPayTotalFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/green_09bb07"
                android:textSize="@dimen/TextSize70"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/pay_state_tvMeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MerName"
            android:textColor="@color/green_09bb07"
            android:textSize="@dimen/TextSize26"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:background="@drawable/pay_state_bg"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="50dp"
        >
        <Button
            android:id="@+id/pay_state_btComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete"
            android:textColor="@color/green_09bb07"
            android:textSize="@dimen/TextSize22"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/bt_white_radius15"
            />
    </LinearLayout>

</LinearLayout>
